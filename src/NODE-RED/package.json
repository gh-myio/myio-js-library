{
  "name": "myio-nodered-scheduling-tests",
  "version": "1.0.0",
  "description": "Unit tests for MYIO Node-RED scheduling engine",
  "main": "agendamento-refactored.js",
  "scripts": {
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:no-feriado": "jest --testNamePattern='SEM FERIADO'",
    "test:feriado": "jest --testNamePattern='COM FERIADO'",
    "test:edge": "jest --testNamePattern='Edge Cases'",
    "test:automacao": "jest --config=functions/automacao-on-off/tests/jest.config.js",
    "test:persister": "jest --config=functions/persister-schedule/tests/jest.config.js",
    "test:log-cleanup": "jest --config=functions/log-cleanup/tests/jest.config.js",
    "test:telemetry": "jest --config=functions/send-log-action-by-telemetry-per-device/tests/jest.config.js",
    "test:summary": "jest --config=functions/automation-daily-summary/tests/jest.config.js",
    "test:all-modules": "npm run test:automacao && npm run test:persister && npm run test:log-cleanup && npm run test:telemetry && npm run test:summary"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "agendamento-refactored.module.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 65,
        "functions": 90,
        "lines": 65,
        "statements": 65
      }
    },
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "keywords": [
    "myio",
    "node-red",
    "scheduling",
    "automation",
    "testing"
  ],
  "author": "MYIO Team",
  "license": "ISC",
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
