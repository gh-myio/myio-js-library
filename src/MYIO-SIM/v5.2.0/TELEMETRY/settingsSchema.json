{
  "schema": {
    "type": "object",
    "title": "TELEMETRY Widget Settings",
    "properties": {
      "domain": {
        "type": "string",
        "title": "Domain (Dominio)",
        "enum": ["energy", "water", "temperature"],
        "default": "energy",
        "description": "Dominio: energy (kWh), water (m3), temperature (C)"
      },
      "context": {
        "type": "string",
        "title": "Context (Contexto)",
        "enum": [
          "entry",
          "common_area",
          "stores",
          "head_office",
          "equipments",
          "with_climate_control",
          "without_climate_control"
        ],
        "default": "entry",
        "description": "Contexto: entry (equipamentos em geral), common_area (área comum), stores (lojas), head_office (sede/matriz), equipments (energia), with_climate_control (temperatura com climatização), without_climate_control (temperatura sem climatização)"
      },
      "useNewComponents": {
        "type": "boolean",
        "title": "Use New Components",
        "default": true
      },
      "enableSelection": {
        "type": "boolean",
        "title": "Enable Selection",
        "default": true
      },
      "enableDragDrop": {
        "type": "boolean",
        "title": "Enable Drag Drop",
        "default": true
      },
      "hideInfoMenuItem": {
        "type": "boolean",
        "title": "Hide Info Menu Item",
        "default": true
      },
      "debugActive": {
        "type": "boolean",
        "title": "Debug Active",
        "default": false
      },
      "activeTooltipDebug": {
        "type": "boolean",
        "title": "Active Tooltip Debug",
        "default": false
      }
    },
    "required": []
  },
  "form": [
    "domain",
    "context",
    "useNewComponents",
    "enableSelection",
    "enableDragDrop",
    "hideInfoMenuItem",
    "debugActive",
    "activeTooltipDebug"
  ]
}
