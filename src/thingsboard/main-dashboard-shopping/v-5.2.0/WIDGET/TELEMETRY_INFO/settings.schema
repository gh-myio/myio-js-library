{
  "schema": {
    "type": "object",
    "title": "TELEMETRY_INFO Settings",
    "properties": {
      "labelWidget": {
        "title": "Widget Label",
        "type": "string",
        "default": "Informações de Energia"
      },
      "DOMAIN": {
        "title": "Domain",
        "type": "string",
        "default": "energy",
        "enum": ["energy", "water", "temperature"],
        "description": "Data domain to filter orchestrator data"
      },
      "customerTB_ID": {
        "title": "Customer ThingsBoard ID",
        "type": "string",
        "description": "ThingsBoard customer ID (required for data filtering)"
      },
      "showDevicesList": {
        "title": "Show Devices List",
        "type": "boolean",
        "default": false,
        "description": "Display list of entrada devices in the card"
      },
      "chartColors": {
        "title": "Chart Colors (RFC-0056: 6 categories)",
        "type": "object",
        "properties": {
          "climatizacao": {
            "title": "Climatização Color",
            "type": "string",
            "default": "#00C896",
            "description": "Teal (MyIO accent)"
          },
          "elevadores": {
            "title": "Elevadores Color",
            "type": "string",
            "default": "#5B2EBC",
            "description": "Purple (MyIO primary)"
          },
          "escadasRolantes": {
            "title": "Escadas Rolantes Color",
            "type": "string",
            "default": "#FF6B6B",
            "description": "Red"
          },
          "lojas": {
            "title": "Lojas Color",
            "type": "string",
            "default": "#FFC107",
            "description": "Yellow"
          },
          "outros": {
            "title": "Outros Equipamentos Color",
            "type": "string",
            "default": "#9C27B0",
            "description": "Deep Purple"
          },
          "areaComum": {
            "title": "Área Comum Color (Residual)",
            "type": "string",
            "default": "#4CAF50",
            "description": "Green"
          }
        }
      },
      "DEBUG_ACTIVE": {
        "title": "Enable Debug Logs",
        "type": "boolean",
        "default": false,
        "description": "Show detailed console logs for debugging"
      }
    },
    "required": ["customerTB_ID", "DOMAIN"]
  },
  "form": [
    "labelWidget",
    "DOMAIN",
    "customerTB_ID",
    "showDevicesList",
    {
      "key": "chartColors",
      "type": "section",
      "title": "Chart Color Configuration (RFC-0056)",
      "items": [
        "chartColors.climatizacao",
        "chartColors.elevadores",
        "chartColors.escadasRolantes",
        "chartColors.lojas",
        "chartColors.outros",
        "chartColors.areaComum"
      ]
    },
    "DEBUG_ACTIVE"
  ]
}
