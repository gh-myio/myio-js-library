{
  "schema": {
    "type": "object",
    "title": "TELEMETRY_INFO Settings",
    "properties": {
      "labelWidget": {
        "title": "Widget Label",
        "type": "string",
        "default": "Informações de Energia"
      },
      "DOMAIN": {
        "title": "Domain",
        "type": "string",
        "default": "energy",
        "enum": ["energy", "water", "temperature"],
        "description": "Data domain to filter orchestrator data"
      },
      "showDevicesList": {
        "title": "Show Devices List",
        "type": "boolean",
        "default": false,
        "description": "Display list of entrada devices in the card"
      },
      "chartColors": {
        "title": "Chart Colors (RFC-0056: 6 categories)",
        "type": "object",
        "properties": {
          "climatizacao": {
            "title": "Climatização Color",
            "type": "string",
            "default": "#00C896",
            "description": "Teal (MyIO accent)"
          },
          "elevadores": {
            "title": "Elevadores Color",
            "type": "string",
            "default": "#5B2EBC",
            "description": "Purple (MyIO primary)"
          },
          "escadasRolantes": {
            "title": "Escadas Rolantes Color",
            "type": "string",
            "default": "#FF6B6B",
            "description": "Red"
          },
          "lojas": {
            "title": "Lojas Color",
            "type": "string",
            "default": "#FFC107",
            "description": "Yellow"
          },
          "outros": {
            "title": "Outros Equipamentos Color",
            "type": "string",
            "default": "#9C27B0",
            "description": "Deep Purple"
          },
          "areaComum": {
            "title": "Área Comum Color (Residual)",
            "type": "string",
            "default": "#4CAF50",
            "description": "Green"
          }
        }
      },
      "waterIncludeBathrooms": {
        "title": "Water: Include Bathrooms Card",
        "type": "boolean",
        "default": false,
        "description": "When enabled for water domain, shows a separate card for Banheiros (bathrooms) consumption"
      },
      "waterChartColors": {
        "title": "Water Chart Colors",
        "type": "object",
        "properties": {
          "lojas": {
            "title": "Lojas Color",
            "type": "string",
            "default": "#FFC107"
          },
          "banheiros": {
            "title": "Banheiros Color",
            "type": "string",
            "default": "#2196F3"
          },
          "areaComum": {
            "title": "Área Comum Color",
            "type": "string",
            "default": "#4CAF50"
          },
          "pontosNaoMapeados": {
            "title": "Pontos Não Mapeados Color",
            "type": "string",
            "default": "#9E9E9E"
          }
        }
      }
    }
  },
  "form": [
    "labelWidget",
    "DOMAIN",
    "showDevicesList",
    "chartColors.climatizacao",
    "chartColors.elevadores",
    "chartColors.escadasRolantes",
    "chartColors.lojas",
    "chartColors.outros",
    "chartColors.areaComum",
    "waterIncludeBathrooms",
    "waterChartColors.lojas",
    "waterChartColors.banheiros",
    "waterChartColors.areaComum",
    "waterChartColors.pontosNaoMapeados"
  ]
}
