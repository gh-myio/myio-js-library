{
  "schema": {
    "type": "object",
    "title": "MAIN_BAS Settings",
    "description": "RFC-0158: Building Automation System (BAS) Dashboard Controller",
    "properties": {
      "enableDebugMode": {
        "title": "Enable Debug Mode",
        "type": "boolean",
        "default": false
      },
      "defaultThemeMode": {
        "title": "Default Theme Mode",
        "type": "string",
        "enum": ["dark", "light"],
        "default": "light"
      },
      "dashboardTitle": {
        "title": "Dashboard Title",
        "type": "string",
        "default": "DASHBOARD"
      },
      "sidebarLabel": {
        "title": "Sidebar Label (Locais)",
        "type": "string",
        "default": "Locais"
      },
      "environmentsLabel": {
        "title": "Environments Section Label",
        "type": "string",
        "default": "Ambientes"
      },
      "pumpsMotorsLabel": {
        "title": "Pumps & Motors Section Label",
        "type": "string",
        "default": "Bombas e Motores"
      },
      "temperatureChartTitle": {
        "title": "Temperature Chart Title",
        "type": "string",
        "default": "Temperatura do dia atual de todos os ambientes"
      },
      "consumptionChartTitle": {
        "title": "Consumption Chart Title",
        "type": "string",
        "default": "Consumo do dia atual de todos os ambientes"
      },
      "showSidebar": {
        "title": "Show Sidebar (Locais)",
        "type": "boolean",
        "default": true
      },
      "showWaterInfrastructure": {
        "title": "Show Water Infrastructure",
        "type": "boolean",
        "default": true
      },
      "showEnvironments": {
        "title": "Show Environments (HVAC)",
        "type": "boolean",
        "default": true
      },
      "showPumpsMotors": {
        "title": "Show Pumps & Motors",
        "type": "boolean",
        "default": true
      },
      "showCharts": {
        "title": "Show Charts",
        "type": "boolean",
        "default": true
      },
      "primaryColor": {
        "title": "Primary Color",
        "type": "string",
        "default": "#2F5848"
      },
      "warningColor": {
        "title": "Warning Color",
        "type": "string",
        "default": "#f57c00"
      },
      "errorColor": {
        "title": "Error Color",
        "type": "string",
        "default": "#c62828"
      },
      "successColor": {
        "title": "Success Color",
        "type": "string",
        "default": "#2e7d32"
      },
      "mainBackground": {
        "title": "Main Dashboard Background",
        "type": "string",
        "default": "#0b1220"
      },
      "mainBackgroundImage": {
        "title": "Main Dashboard Background Image URL",
        "type": "string",
        "default": ""
      },
      "sidebarBackground": {
        "title": "Locais Panel Background",
        "type": "string",
        "default": "#faf8f1"
      },
      "waterPanelBackground": {
        "title": "Water Infrastructure Background",
        "type": "string",
        "default": "#e8f4fc"
      },
      "environmentsPanelBackground": {
        "title": "Ambientes Panel Background",
        "type": "string",
        "default": "#fef7e8"
      },
      "motorsPanelBackground": {
        "title": "Bombas e Motores Background",
        "type": "string",
        "default": "#f0f4e8"
      },
      "chartPanelBackground": {
        "title": "Chart Panel Background",
        "type": "string",
        "default": "#ffffff"
      },
      "sidebarBackgroundImage": {
        "title": "Sidebar Background Image URL",
        "type": "string",
        "default": ""
      }
    }
  },
  "form": [
    {
      "key": "enableDebugMode",
      "type": "checkbox"
    },
    {
      "key": "defaultThemeMode",
      "type": "select"
    },
    {
      "type": "fieldset",
      "title": "Labels",
      "items": [
        "dashboardTitle",
        "sidebarLabel",
        "environmentsLabel",
        "pumpsMotorsLabel",
        "temperatureChartTitle",
        "consumptionChartTitle"
      ]
    },
    {
      "type": "fieldset",
      "title": "Visibility",
      "items": [
        {
          "key": "showSidebar",
          "type": "checkbox"
        },
        {
          "key": "showWaterInfrastructure",
          "type": "checkbox"
        },
        {
          "key": "showEnvironments",
          "type": "checkbox"
        },
        {
          "key": "showPumpsMotors",
          "type": "checkbox"
        },
        {
          "key": "showCharts",
          "type": "checkbox"
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Theme Colors",
      "items": [
        {
          "key": "primaryColor",
          "type": "color"
        },
        {
          "key": "warningColor",
          "type": "color"
        },
        {
          "key": "errorColor",
          "type": "color"
        },
        {
          "key": "successColor",
          "type": "color"
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Panel Backgrounds",
      "items": [
        {
          "key": "mainBackground",
          "type": "color"
        },
        {
          "key": "mainBackgroundImage",
          "type": "text",
          "placeholder": "https://example.com/background.png"
        },
        {
          "key": "sidebarBackground",
          "type": "color"
        },
        {
          "key": "waterPanelBackground",
          "type": "color"
        },
        {
          "key": "environmentsPanelBackground",
          "type": "color"
        },
        {
          "key": "motorsPanelBackground",
          "type": "color"
        },
        {
          "key": "chartPanelBackground",
          "type": "color"
        },
        {
          "key": "sidebarBackgroundImage",
          "type": "text",
          "placeholder": "https://example.com/image.png"
        }
      ]
    }
  ]
}
